{erl_opts, [warnings_as_errors,
            warn_export_all,
            {lager_truncation_size, 8192}]}.

{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.

{edoc_opts, [{doclet, edown_doclet},
             {dialyzer_specs, all},
             {report_missing_type, true},
             {report_type_mismatch, true},
             {pretty_print, erl_pp},
             {preprocess, true}]}.

{deps, [
    {eredis,"1.*", {git, "https://github.com/Nordix/eredis.git", {branch, "master"}}},
    {ecredis_crc16, ".*", {git, "git@github.com:HalloAppInc/ecredis-crc16.git", {branch, "master"}}},
    {lager, ".*", {git, "https://github.com/erlang-lager/lager", "3.6.10"}}
    ]}.
